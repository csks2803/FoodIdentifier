<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_miny"
    card_view:cardCornerRadius="@dimen/size_8"
    card_view:cardElevation="@dimen/size_8"
    card_view:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_package"
    >

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:baselineAligned="false">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cons_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            >

            <ImageView
                android:id="@+id/iv_package"
                android:layout_width="@dimen/size_52"
                android:layout_height="@dimen/size_52"
                android:layout_margin="@dimen/margin_small"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/tv_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_big"
                android:layout_marginTop="@dimen/margin_small"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/iv_package"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_package_desc"
                android:layout_width="@dimen/tv_size"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_12"
                android:textStyle="normal"
                app:layout_constraintLeft_toLeftOf="@id/tv_package_name"
                app:layout_constraintLeft_toRightOf="@+id/iv_package"
                app:layout_constraintTop_toBottomOf="@+id/tv_package_name"/>

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="parent"
                 android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/iv_package"
                app:layout_constraintTop_toBottomOf="@+id/iv_package"/>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cons_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/amber"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>