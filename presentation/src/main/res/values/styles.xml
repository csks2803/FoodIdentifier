<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="NavigationDrawerItemStyle">
        <item name="android:listDivider">@color/amber</item>
        <item name="android:textColorSecondary">@color/amber</item>
        <item name="android:textSize">@dimen/font_size_16</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/size_52</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
